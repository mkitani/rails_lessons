<h1 id="PageTitle">ユーザ登録</h1>
<p>フォーム入力</p>
    <div class="container">

    <% if @user.errors.any? %>
      <div class="bg-danger">
        <h2><%= @user.errors.count %>件のエラーがあります。</h2>
     
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<!--
      <form action="/users/create" method="post">
-->
      <%= form_for "", :url => {:action=>'create'} do |f| %>
	
        <div class="form-group">

          <label for="exampleInputEmail1"><%= t('activerecord.attributes.user.email') %></label>
          <div id="exampleInputEmail1_msg">
          </div>
          <input type="email" name="user[email]" value="" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="<%= t('view.users.new.email') %>">

          <%#= label(:title, t('activerecord.attributes.user.email')) %>
          <%#= email_field :user, :email, :placeholder => "Enter your email...", :title => 'email', :id => 'inputEmail1', :class => 'form-control'%>
        </div>
 

        <div class="form-group">

          <label for="exampleInputPassword1"><%= t('activerecord.attributes.user.password') %></label>
          <input type="password" name="user[password]" class="form-control" id="exampleInputPassword1" placeholder="<%= t('view.users.new.password') %>">

          <%#= label :user, :password %>
          <%#= password_field :user, :password, :size => '40', :placeholder =>"Enter your password..." , :title => 'password', :id => 'inputPassword1', :class => 'form-control' %>
        </div>


        <div class="form-group">
<!--
        	<input type="submit" id="btn1" class="btn btn-primary" value="登録">
-->
          <%= f.submit :登録, :id => 'btn1', :class => 'btn btn-primary' %>
        </div>
      <% end %>
<!--
      </form>
-->
    </div>